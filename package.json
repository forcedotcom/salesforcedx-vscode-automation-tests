{
  "type": "module",
  "name": "salesforcedx-vscode-automation-tests",
  "version": "1.0.0",
  "repository": "forcedotcom/salesforcedx-vscode-automation-tests",
  "license": "BSD-3-Clause",
  "private": true,
  "devDependencies": {
    "@commitlint/config-conventional": "19.0.3",
    "@salesforce/eslint-plugin-aura": "2.1.0",
    "@types/fs-extra": "11.0.4",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "@wdio/cli": "8.32.4",
    "@wdio/globals": "8.32.4",
    "@wdio/local-runner": "^8.32.4",
    "@wdio/mocha-framework": "^8.32.4",
    "@wdio/spec-reporter": "^8.32.4",
    "@wdio/types": "^8.32.4",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha-steps": "1.3.0",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "wdio-vscode-service": "6.0.3",
    "wdio-wait-for": "^3.0.11"
  },
  "scripts": {
    "automation-tests": "wdio run test/wdio.conf.ts",
    "setup": "wdio run test/wdio.conf.ts --spec test/setup/anInitialSetUp.e2e.ts",
    "commit": "git-cz",
    "lint": "eslint ./test --ext .ts"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run lint && npm run reformat"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
