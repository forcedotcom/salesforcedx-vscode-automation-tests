{
  "name": "salesforcedx-vscode-automation-tests",
  "version": "1.0.0",
  "repository": "forcedotcom/salesforcedx-vscode-automation-tests",
  "license": "BSD-3-Clause",
  "private": true,
  "devDependencies": {
    "@commitlint/config-conventional": "^17.1.0",
    "@types/node": "^18.16.1",
    "@wdio/cli": "8.15.7",
    "@wdio/globals": "8.15.7",
    "@wdio/local-runner": "8.15.7",
    "@wdio/mocha-framework": "8.15.7",
    "@wdio/spec-reporter": "8.15.7",
    "@wdio/types": "8.15.7",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.2.0",
    "mocha-steps": "^1.3.0",
    "prettier": "1.19.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "wdio-vscode-service": "^5.2.2",
    "wdio-wait-for": "^3.0.10"
  },
  "dependencies": {},
  "scripts": {
    "automation-tests": "wdio run test/wdio.conf.ts",
    "setup": "wdio run test/wdio.conf.ts --spec test/setup/anInitialSetUp.e2e.ts",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run lint && npm run reformat"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
