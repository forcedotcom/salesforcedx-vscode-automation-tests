{
  "name": "salesforcedx-vscode-automation-tests",
  "version": "1.0.0",
  "repository": "forcedotcom/salesforcedx-vscode-automation-tests",
  "license": "BSD-3-Clause",
  "private": true,
  "devDependencies": {
    "@commitlint/config-conventional": "18.4.3",
    "@salesforce/eslint-plugin-aura": "2.1.0",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "6.17.0",
    "@typescript-eslint/parser": "6.17.0",
    "@wdio/cli": "^7.34.0",
    "@wdio/globals": "^8.0.5",
    "@wdio/local-runner": "^7.34.0",
    "@wdio/mocha-framework": "^7.33.0",
    "@wdio/spec-reporter": "^7.33.0",
    "@wdio/types": "^7.33.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha-steps": "^1.3.0",
    "prettier": "3.1.1",
    "ts-node": "10.9.2",
    "typescript": "4.9.5",
    "wdio-vscode-service": "^4.2.1",
    "wdio-wait-for": "^2.2.6"
  },
  "scripts": {
    "automation-tests": "wdio run test/wdio.conf.ts",
    "setup": "wdio run test/wdio.conf.ts --spec test/setup/anInitialSetUp.e2e.ts",
    "commit": "git-cz",
    "lint": "eslint ./test --ext .ts"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run lint && npm run reformat"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}