{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Node Dependencies For Project",
      "type": "shell",
      "command": "npm install",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run All Automation Tests",
      "type": "shell",
      "command": "npx wdio run test/wdio.conf.ts",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Current Automation Test",
      "type": "shell",
      "command": "npx wdio run test/wdio.conf.ts --spec ${file}",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Authorize DevHub - E2E Testing Org",
      "type": "shell",
      "command": "sfdx auth web login | sfdx alias set vscodeOrg=svcideebot@salesforce.com | sfdx org list",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
